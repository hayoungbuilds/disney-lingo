{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["DOM", "ES2020"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
